@*@model IEnumerable<B1_I_3.Models.Nhasanxuat>*@
@model DAN_WEB.Models.SinhVien
@*@{
    Layout = null;
}*@
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        <h2>Thông tin sinh viên</h2>
        <p>
            @*<a href="@Url.Action("them")">Thêm mới</a>*@
            <a asp-action="them" class="btn btn-primary">Thêm mới</a>
        </p>
        @*<div class="col-lg-9">*@
        <table class="table table-bordered">
            <tr>
                @*<th>Tên nhà sản xuất</th>
                <th>Địa chỉ</th>
                <th>Tác vụ</th>*@
                <th><label asp-for="Masv" class="form-label"></label></th>
                <th><label asp-for="Hosv" class="form-label"></label></th>
                <th><label asp-for="Tensv" class="form-label"></label></th>
                <th><label asp-for="Ngaysinh" class="form-label"></label></th>
                <th><label asp-for="Diachi" class="form-label"></label></th>
                <th><label asp-for="Sdt" class="form-label"></label></th>
                <th><label asp-for="Gioitinh" class="form-label"></label></th>
                <th><label asp-for="Malop" class="form-label"></label></th>


                <th>Tác vụ</th>
            </tr>
            @{
                foreach (var item in ViewBag.sv)
                //foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Masv</td>
                        <td>@item.Hosv</td>
                        <td>@item.Tensv</td>
                        <td>@item.Ngaysinh</td>
                        <td>@item.Diachi</td>
                        <td>@item.Sdt</td>
                        <td>
                            @{
                                if (item.Gioitinh == true)
                                {
                                    <p>Nam</p>
                                }
                                else
                                {
                                    <p>Nữ</p>
                                }
                            }
                            <td>
                                @item.Malop
                        </td>
                        <td>

                            <a asp-action="sua" asp-route-id="@item.Masv" class="btn btn-success">Sửa</a>
                            <a asp-action="xoa" asp-route-id="@item.Masv" class="btn btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
    @*</div>*@
</body>
</html>
