@model DAN_WEB.Models.SinhVien
@{
    Layout = null;
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        @{
            if (ViewBag.flagDelete == true)
            {
                <h2>Xóa sinh viên</h2>
                <h3>Bạn muốn xóa sinh viên này ?</h3>
            }
            else
            {
                <h3>Bạn không thể xóa sinh viên này!</h3>
            }
        }

        <form asp-action="xoa" method="post">
            <div class="form-group">
                <table class="table">
                    <thead>
                        <tr>
                            @*<th>Tên nhà sản xuất</th>
                            <th>Địa chỉ</th>*@
                            <th><label asp-for="Hosv" class="form-label"></label> </th>
                            <th><label asp-for="Tensv" class="form-label"></label> </th>
                            <th><label asp-for="Diachi" class="form-label"></label> </th>
                            <th><label asp-for="Ngaysinh" class="form-label"></label> </th>
                            <th><label asp-for="Sdt" class="form-label"></label> </th>
                            <th><label asp-for="Gioitinh" class="form-label"></label> </th>
                            <th><label asp-for="Malop" class="form-label"></label> </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>

                            <td>
                                @*<input type="hidden" name="mansx" value="@Model.Mansx" />*@
                                <input type="hidden" asp-for="Masv" />
                                @*<label for="Tennsx">@n.Tennsx</label>*@
                                <label for="Hosv">@Model.Hosv</label>
                            </td>
                            <td>
                                <label for="Tensv">@Model.Tensv</label>
                            </td>
                            <td>
                                <label for="Diachi">@Model.Diachi</label>
                            </td>
                            <td>
                                <label for="Ngaysinh">@Model.Ngaysinh</label>
                            </td>
                            <td>
                                <label for="Sdt">@Model.Sdt</label>
                            </td>
                            <td>
                                <label for="Gioitinh">
                                    @{
                                        if (Model.Gioitinh == true)
                                        {
                                            <p>Nam</p>
                                        }
                                        else
                                        {
                                            <p>Nữ</p>
                                        }
                                    }
                                </label>
                            </td>
                            <td>
                                <label for="Malop">@Model.Malop</label>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <br />
            @{
                if (ViewBag.flagDelete == true)
                {
                    <div class="form-group">
                        <input type="submit" value="Xóa" class="btn btn-primary" />
                    </div>
                }

            }
            <br />
            <div>
                @*<a href="@Url.Action("index")">Quay lại</a>*@
                <a asp-action="Index">Quay lại</a>
            </div>
        </form>
    </div>
</body>
</html>
