    @model DAN_WEB.Models.QuanTri

    @{
        Layout = null;
    }
    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <!-- Latest compiled and minified CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

        <!-- Latest compiled JavaScript -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>


    </head>
    <body>
    
        <div class="container">
            <form asp-action="them" method="post">
                <h2>Thêm quản trị</h2>
                <div class="form-group">
                    <div asp-validation-summary="ModelOnly" class="text-danger">
                        <span>Các lỗi cần khắc phục:</span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Maqt" class="form-label"></label>@*<br />*@
                    <input asp-for="Maqt" class="form-control" />@*<br /><br />*@
                    <span asp-validation-for="Maqt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tenqt" class="form-label"></label>
                    <input asp-for="Tenqt" class="form-control" />
                    <span asp-validation-for="Tenqt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Sdt" class="form-label"></label>
                    <input asp-for="Sdt" class="form-control" />
                    <span asp-validation-for="Sdt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Diachi" class="form-label"></label>
                    <input asp-for="Diachi" class="form-control" />
                    <span asp-validation-for="Diachi" class="text-danger"></span>
                </div>
           
                <div class="form-group mt-3">
                    <input type="submit" class="btn btn-primary" value="Save" /><br /><br />
                </div>
                <div>
                    <a asp-action="Index">Quay lại</a>
                </div>

            </form>

        </div>
    </body>
    </html>
