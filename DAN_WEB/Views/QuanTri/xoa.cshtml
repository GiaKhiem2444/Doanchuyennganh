@model DAN_WEB.Models.QuanTri
@{
    Layout = null;
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        @{
            if (ViewBag.flagDelete == true)
            {
                <h2>Xóa quản trị</h2>
                <h3>Bạn muốn xóa quản trị này ?</h3>
            }
            else
            {
                <h3>Bạn không thể xóa quản trị này!</h3>
            }
        }

        <form asp-action="xoa" method="post">
            <div class="form-group">
                <table class="table">
                    <thead>
                        <tr>
                            <th><label asp-for="Tenqt" class="form-label"></label> </th>
                            <th><label asp-for="Sdt" class="form-label"></label> </th>
                            <th><label asp-for="Diachi" class="form-label"></label> </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>

                            <td>
                                @*<input type="hidden" name="mansx" value="@Model.Mansx" />*@
                                <input type="hidden" asp-for="Maqt" />
                                @*<label for="Tennsx">@n.Tennsx</label>*@
                                <label for="Tenqt">@Model.Tenqt</label>
                            </td>
                            <td>
                                <label for="Sdt">@Model.Sdt</label>
                            </td>
                            <td>
                                <label for="Diachi">@Model.Diachi</label>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <br />
            @{
                if (ViewBag.flagDelete == true)
                {
                    <div class="form-group">
                        <input type="submit" value="Xóa" class="btn btn-primary" />
                    </div>
                }

            }
            <br />
            <div>
                @*<a href="@Url.Action("index")">Quay lại</a>*@
                <a asp-action="Index">Quay lại</a>
            </div>
        </form>
    </div>
</body>
</html>
