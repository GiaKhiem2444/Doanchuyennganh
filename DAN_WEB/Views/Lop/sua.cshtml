@model DAN_WEB.Models.Lop

@{
    Layout = null;
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <div class="container">
        <form asp-action="sua" method="post">
            <div class="form-horizontal">
                <h2>Sửa thông tin lớp</h2>
                @{
                    Lop lop = ViewBag.lop;
                }
                <div class="form-group">

                    <input asp-for="Malop" type="hidden" /><br />
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Tenlop" class="form-label"></label>

                    <input asp-for="Tenlop" class="form-control" />
                    <span asp-validation-for="Tenlop" class="text-danger"></span>
                </div>
               
                <br />
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Lưu" />
                </div>
                <br />
                <div>

                    <a asp-action="Index">Quay lại</a>
                </div>
            </div>
        </form>
    </div>
</body>
</html>