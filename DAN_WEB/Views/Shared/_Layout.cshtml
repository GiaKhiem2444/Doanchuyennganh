<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

    <style>
        body {
            background-color: #f8f9fa; /* Light background for better readability */
            font-family: 'Arial', sans-serif;
        }

        a {
            text-decoration: none;
            color: #007bff; /* Bootstrap primary color */
        }

            a:hover {
                color: #0056b3; /* Darker shade on hover */
                text-decoration: underline;
            }

        .card {
            margin-top: 20px;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
        }

        .card-header, .card-footer {
            border-radius: 15px 15px 0 0; /* Rounded corners for the header */
            border-radius: 0 0 15px 15px; /* Footer rounded corners */
            background-color: #343a40; /* Dark Bootstrap gray */
            color: #ffffff;
            text-align: center;
            font-weight: bold;
        }

        .nav-tabs .nav-item {
            margin-right: 5px;
        }

        .nav-tabs .nav-link {
            border-radius: 8px;
            padding: 10px 15px;
            color: #fff;
            background-color: #007bff; /* Bootstrap primary */
        }

            .nav-tabs .nav-link:hover {
                background-color: #0056b3; /* Slightly darker shade */
            }

            .nav-tabs .nav-link.active {
                background-color: #ffc107; /* Bootstrap warning color */
                color: #212529; /* Dark text */
            }

        .table-striped tbody tr:hover {
            background-color: #f1f1f1; /* Subtle hover effect for rows */
        }

        .table td a {
            color: #007bff; /* Link color for table items */
            font-weight: bold;
        }

            .table td a:hover {
                color: #0056b3; /* Hover effect for table links */
            }

        .bg-light {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Add depth to content section */
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
              
            </div>
            <div class="card-title">
                <div class="row">
                    <div class="col-md-8">
                        <div class="nav nav-tabs">
                            <div class="nav-item">
                                <div class="nav-link active">
                                    @Html.ActionLink("Trang chủ", "Index", "Home", null, new { @class = "text-dark" })
                                </div>
                            </div>
                            
                            </div>
                        </div>
                    </div>
                    
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <table class="table table-success table-striped">
                            <tbody>
                                <tr>
                                    <td><a href="@Url.Action("Index","SinhVien")">Quản lý sinh viên</a></td>
                                </tr>
                                <tr>
                                    <td><a href="@Url.Action("Index","Lop")">Quản lý lớp</a></td>
                                </tr>
                                <tr>
                                    <td><a href="@Url.Action("Index","NhomMonHoc")">Quản lý nhóm môn học</a></td>
                                </tr>
                                <tr>
                                    <td><a href="@Url.Action("Index","MonHoc")">Quản lý môn học</a></td>
                                </tr>
                                <tr>
                                    <td><a href="@Url.Action("Index","QuanTri")">Quản lý quản trị</a></td>
                                </tr>
                                <tr>
                                    <td><a href="@Url.Action("Index","Diem")">Quản lý điểm</a></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-9 bg-light">
                        @RenderBody()
                    </div>
                </div>
            </div>
            <div class="card-footer">
               Trần Gia Khiêm
               Võ Duy Khánh
            </div>
        </div>
    </div>
</body>
</html>
